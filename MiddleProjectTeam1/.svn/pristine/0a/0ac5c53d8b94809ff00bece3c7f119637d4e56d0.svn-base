@charset "UTF-8";
       /* h2를 가운데 정렬 */
        h2 {
            text-align: center;
            margin-top: 20px;
        }

        /* ul을 가로 정렬 */
     #nav_bar ul {
            list-style: none;
            padding: 0;
            margin: 20px 0;
            display: flex;
            justify-content: center; /* 가운데 정렬 */
        }

        /* li 요소들을 가로로 정렬하고 간격을 줌 */
        #nav_bar ul li {
            display: inline-block;
            margin: 0 15px; /* 좌우 간격 */
            position: relative; /* ::after 위치를 위해 필요 */
        }

        /* li 요소들 사이에 | 추가 */
        #nav_bar ul li::after {
            content: "|" ; /* 구분 기호 */
            position: absolute;
            right: -20px; /* 기호 위치 조정 */
        }

        /* 마지막 li의 | 제거 */
        #nav_bar ul li:last-child::after {
            content: "" ; /* 마지막 요소는 구분 기호 제거 */
        }

        /* li 내부 링크 스타일 */
        #nav_bar ul li a {
            text-decoration: none;
            color: black;
            font-weight: bold;
        }

       /* 검색창과 버튼의 컨테이너 스타일 */
	.search-container {
	    display: flex;
	    justify-content: center;
	    align-items: center;
	    margin-top: 20px;
	}
	
	/* 검색창 스타일 */
	#search {
	    width: 60%; 
	    padding: 10px;
	    box-sizing: border-box;
	    border-top-right-radius: 0;
	    border-bottom-right-radius: 0;
	    border: 1px solid #ccc; 
	    border-right: none; /* 버튼과 붙어있게 하기 위해 오른쪽 테두리 제거 */
	}
	
	/* 검색 버튼 스타일 */
	#searchbtn {
	    padding: 10px 15px;
	    border-top-left-radius: 0;
	    border-bottom-left-radius: 0;
	    border: 1px solid #ccc; /* 테두리 추가 */
	    border-left: none; /* 검색창과 붙어있게 하기 위해 왼쪽 테두리 제거 */
	    background-color: #f5f5f5; /* 배경 색상 조정 */
	}
        

        /* 게시판 테이블 스타일 */
        table {
            width: 80%;
            margin-top: 20px;
            border-collapse: collapse;
            text-align: left;
        }

        table th, table td {
            border: 1px solid #ccc;
            padding: 10px;
        }

        table th {
            background-color: #f9f9f9;
        }
        
     .table_head {
    display: flex;
    justify-content: space-between; /* 요소를 양 끝으로 배치 */
    align-items: center; /* 수직 가운데 정렬 */
    margin-bottom: 5px; /* 테이블과의 간격 */
	}

	.total_post {
    font-size: 16px; /* 원하는 폰트 사이즈 조정 */
	}

	#insertBtn {
    padding: 10px 20px; /* 버튼 크기 조정 */
    background-color: #007bff; /* 버튼 배경 색상 */
    color: white; /* 버튼 텍스트 색상 */
    border: none; /* 기본 테두리 제거 */
    border-radius: 4px; /* 버튼 모서리 둥글게 */
    cursor: pointer; /* 마우스 포인터 변경 */
	}

	#insertBtn:hover {
    background-color: #0056b3; /* 버튼 hover 상태 색상 */
	}
	
