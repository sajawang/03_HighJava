<configuration>
		<!-- DB연겨려에 사용할 propertied파일에 대한 정보를 알려준다. -->
	<properties resource="kr/or/ddit/mybatis/config/dbinfo.properties"/>
	
	<!-- 기본 세팅 값들-->
	<settings>
		<!-- 데이터가 null이 전달되면 빈칸으로 인식하지 말고, null로 인식하라는 뜻 -->
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	
	<!-- 사용할 VO객체의 별칭 설정하기 -->
	<!-- 원래 VO객체를 사용할때는 해당 객체의 전체이름(패키지명까지 포함된 이름)을 
		사용해야 하는데 이렇게 되면 이름이 너무 길어질 수 있다. 긴 이름 대시 사용할 별칭을 설정한다. -->
	<!-- 
	<typeAliases>
		<typeAlias type="패키지명이 포함된 전체이름" alias="별칭이름"/>
	</typeAliases>
	 -->
	 
	 <!-- DB에 접속설정 -->
	 <environments default="oracleDev">
	 	<environment id="oracleDev">
			<transactionManager type="JDBC"/>
			<dataSource type="POOLED">
				<property name="driver" value="${driver}"/>
				<property name="url" value="${url}"/>
				<property name="username" value="${user}"/>
				<property name="password" value="${pass}"/>
			</dataSource>
	 	</environment>
	 </environments>
</configuration>