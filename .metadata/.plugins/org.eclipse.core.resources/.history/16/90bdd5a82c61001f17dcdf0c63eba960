package kr.or.ddit.basic;

import java.sql.SQLException;
import java.util.Scanner;

public class JdbcTest05 {
	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		//1.insert작업
		System.out.println("insert 작업시작");
		
		System.out.println("lprod_gu 입력(예시 : P101) >> ");
		String lprodGu = scan.next();
		
		System.out.println("lprod_nm 입력(예시 : 여성잡화)  >> ");
		String lprodNm = scan.next();
		
		LprodVO lvo = new LprodVO();
		lvo.setLprod_gu(lprodGu);
		lvo.setLprod_nm(lprodNm);
		
		SqlSession session = null;
		
		try {
			session = MybatisUtil.getSqlSession();
			int insertCnt = session.insert("jdbc.insertLprod",lvo);
			
			if(insertCnt>0) {
				session.commit();
				System.out.println("insert작업 성공");
			} else {
				System.out.println("insert작업 실패");
			}
		  } catch (Exception e) {
				e.printStackTrace();
		  } finally {
			session.close();
		  }
		  System.out.println("---------------------------------");
			
		
		  
		  //2.select 작업(개수 구하는)
		  System.out.println("select 작업 시작(결과가 한개일 경우..");
		  
		  System.out.println("lprod_gu 입력(예시 : P101) >> ");
		  String lprodGu2 = scan.next();
			
	  		System.out.println("lprod_nm 입력(예시 : 여성잡화)  >> ");
			String lprodNm2 = scan.next();
			
	}
}








































