@charset "UTF-8";

 body {
  font-family: 'Noto Sans KR', sans-serif;
}
  
    /* Remove the navbar's default margin-bottom and rounded borders */ 
    .navbar {
      margin-bottom: 0;
      border-radius: 0;
      border-color: tomato;
    }
    .container-fluid{
    background-color: tomato; 
    border-color: tomato;
    }
    header{
     width: 100%;
    background-color: white;
    border-bottom: 1px solid #ddd;
    }
    
    .top-bar, .bottom-bar {
    display: flex;
    justify-content: space-between;
    padding: 10px 20px;
    background-color: #FF9966; 
    
}

.top-links a, .bottom-links a, .user-options a {
    color: #555;
    text-decoration: none;
    margin-right: 15px;
    font-size: 14px;
}
    
   
   footer {
      background-color: #f2f2f2;
      padding: 25px;
       text-align: center;
    }
     .bottom-bar {
    justify-content: center; 
  }

  .bottom-links {
    display: flex; 
    justify-content: center; 
    margin: 0; 
    padding: 0; 
  }

  .bottom-links a {
    margin: 0 15px;
  }
    
  .carousel-inner img {
      width: 100%; 
      margin: auto;
      min-height:200px;
  }
  .carousel-inner{
        width: 100%; 
      margin: auto;
      min-height:200px;
  }

  /* Hide the carousel text when the screen is less than 600 pixels wide */
  @media (max-width: 600px) {
    .carousel-caption {
      display: none; 
    }
  }
  
  /* Styling for dropdown */
  .dropdown-menu {
    background-color: #f9f9f9;
    border: none;
  }

  .dropdown-menu>li>a {
    padding: 10px 20px;
  }

  .dropdown-menu>li>a:hover {
    background-color: #f1f1f1;
  }
  
  #logo{
   width: 100px; 
    height: auto;
  }
  
 .banner {
  width: 900px;
  height: 300px;
  object-fit: cover; /* 이미지 비율을 유지하면서 크기에 맞게 잘라줍니다. */
  display: block;
  margin: 0 auto; /* 이미지를 중앙에 배치 */
}

.carousel-inner {
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 300px; 
}

.active{
	width: 100%; 
      margin: auto;
      min-height:200px;
}
ul{
	font-size: 18px;
	font-weight: bold;
}